<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chenjm.sportplay.Mapper.MenuMapping">

    <resultMap id="example" type="com.chenjm.sportplay.bean.MainMenu">
        <id column="id" property="id"></id>
        <result column="title" property="title"></result>
        <result column="path" property="path"></result>
        <collection property="slist" ofType="com.chenjm.sportplay.bean.SubMenu">
            <result column="sid"  property="id"></result>
            <result column="stitle"  property="title"></result>
            <result column="spath"  property="path"></result>
        </collection>
    </resultMap>

    <select id="getAllMenu" resultMap="example">
        SELECT m.id id,m.title title, m.path, s.id sid,s.title stitle,s.path spath
        FROM submenu s,mainmenu m
        where m.id = s.mid
    </select>
</mapper>